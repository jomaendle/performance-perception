<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>com.microfocus.caf.qtm</groupId>
    <artifactId>quantum-ux-bootstrap</artifactId>
    <name>${project.artifactId}</name>
    <packaging>pom</packaging>
    <version>1.0.26-SNAPSHOT</version>

    <parent>
        <groupId>com.microfocus.caf.qtm</groupId>
        <artifactId>quantum</artifactId>
        <version>1.0.26-SNAPSHOT</version>
        <relativePath>../pom.xml</relativePath>
    </parent>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-clean-plugin</artifactId>
                <configuration>
                    <filesets>
                        <fileset>
                            <directory>dist</directory>
                        </fileset>
                        <fileset>
                            <directory>node_modules</directory>
                        </fileset>
                    </filesets>
                </configuration>
            </plugin>

            <plugin>
                <artifactId>maven-antrun-plugin</artifactId>
                <version>1.7</version>
                <executions>
                    <execution>
                        <id>npm-install</id>
                        <phase>process-resources</phase>
                        <configuration>
                            <target name="npm-install">
                                <echo>=== RUNNING NPM INSTALL ===</echo>
                                <exec dir="${project.basedir}" executable="cmd" osfamily="windows" resultproperty="cmdresult">
                                    <arg line="/c 'npm install > npm.status'"/>
                                </exec>
                                <exec dir="${project.basedir}" executable="bash" osfamily="unix" resultproperty="cmdresult">
                                    <arg line="-c 'npm install > npm.status'"/>
                                </exec>
                                <loadfile property="npm.status" srcFile="${project.basedir}/npm.status"/>
                                <echo>${npm.status}</echo>
                                <delete file="${project.basedir}/npm.status" quiet="true"/>
                                <condition property="cmdsuccess">
                                    <equals arg1="${cmdresult}" arg2="0"/>
                                </condition>
                                <fail unless="cmdsuccess"/>
                            </target>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>grunt-build</id>
                        <phase>compile</phase>
                        <configuration>
                            <target name="grunt-build">
                                <echo>=== RUNNING GRUNT BUILD ===</echo>
                                <exec dir="${project.basedir}" executable="cmd" osfamily="windows" resultproperty="cmdresult">
                                    <arg line="/c 'grunt -v -f --no-color > grunt.status'"/>
                                </exec>
                                <exec dir="${project.basedir}" executable="bash" osfamily="unix" resultproperty="cmdresult">
                                    <arg line="-c 'grunt -v -f --no-color > grunt.status'"/>
                                </exec>
                                <loadfile property="grunt.status" srcFile="${project.basedir}/grunt.status"/>
                                <echo>${grunt.status}</echo>
                                <delete file="${project.basedir}/grunt.status" quiet="true"/>
                                <condition property="cmdsuccess">
                                    <equals arg1="${cmdresult}" arg2="0"/>
                                </condition>
                                <fail unless="cmdsuccess"/>
                            </target>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <artifactId>maven-assembly-plugin</artifactId>
                <version>2.4</version>
                <executions>
                    <execution>
                        <id>make-assembly</id>
                        <phase>package</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                        <configuration>
                            <finalName>${project.artifactId}</finalName>
                            <appendAssemblyId>false</appendAssemblyId>
                            <descriptors>
                                <descriptor>assembly.xml</descriptor>
                            </descriptors>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

        </plugins>
    </build>
</project>